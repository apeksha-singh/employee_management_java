<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Add encrypted_reference_id column to export_history table -->
    <changeSet id="002" author="developer" labels="feature">
        <addColumn tableName="export_history">
            <column name="encrypted_reference_id" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <sql>
            ALTER TABLE export_history MODIFY COLUMN encrypted_reference_id VARCHAR(500) COMMENT 'Encrypted version of the reference_id for security purposes';
        </sql>
    </changeSet>

</databaseChangeLog>
